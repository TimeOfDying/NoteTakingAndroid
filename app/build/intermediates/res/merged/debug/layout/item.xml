<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="7dp"
    android:weightSum="1"
    android:background="#FFFFFF">

    <RelativeLayout

        android:id="@+id/relativeLayoutItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:descendantFocusability="blocksDescendants"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notePriority"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="4dp"
            android:layout_toEndOf="@+id/noteID"
            android:layout_toLeftOf="@+id/noteDescription"
            android:layout_toRightOf="@+id/noteID"
            android:background="@color/accent" />

        <TextView
            android:id="@+id/noteID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/noteInFavourite"
            android:layout_toStartOf="@+id/noteInFavourite"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:text="FirstNote"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/noteName"
            android:layout_alignStart="@+id/noteName"
            android:layout_below="@+id/noteName"
            android:layout_toLeftOf="@+id/noteDate"
            android:layout_toStartOf="@+id/noteDate"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:text="FirstNote" />

        <CheckBox
            android:id="@+id/noteInFavourite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_above="@+id/noteDate"
            android:layout_alignTop="@+id/noteName"
            android:button="@drawable/checkbox_selector"
            android:checked="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/noteDate"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/noteName"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/passImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/noteDate"
            android:layout_toLeftOf="@+id/noteInFavourite"
            android:layout_toStartOf="@+id/noteInFavourite"
            android:layout_alignTop="@+id/noteName"
            android:src="@drawable/ic_lock"/>

    </RelativeLayout>


</LinearLayout>
