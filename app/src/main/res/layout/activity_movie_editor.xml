<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.plainolnotes.MovieEditorActivity">


    <EditText
        android:id="@+id/editNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/enter_note_here"
        android:inputType="textMultiLine|textCapSentences"
        android:imeOptions = "actionDone"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editNoteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/Enter_note_name_here"
        android:inputType="textMultiLine|textCapSentences"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editNoteDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="@string/choose_date"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerPR"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editNoteDate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/editNoteDate"
        android:layout_toRightOf="@+id/editNoteDate"
        android:layout_toEndOf="@+id/editNoteDate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Note name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Additional Information"
        android:textStyle="bold"
        android:layout_below="@+id/editNoteDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Date"
        android:textStyle="bold"
        android:layout_below="@+id/editNotePlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editNoteName"
        android:layout_marginTop="11dp"
        android:text="Place"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editNotePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:hint="Enter place here"
        android:inputType="textPersonName"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Priority"
        android:textStyle="bold"
        android:layout_above="@+id/editNoteDate"
        android:layout_toRightOf="@+id/editNoteDate"
        android:layout_toEndOf="@+id/editNoteDate" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/movietemplate" />

    <EditText
        android:id="@+id/editNoteMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editNotePlace"
        android:hint="Enter movie name"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/editNotePlace"
        android:layout_toEndOf="@+id/editNotePlace" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editNoteMovieName"
        android:layout_alignStart="@+id/editNoteMovieName"
        android:layout_alignTop="@+id/textView2"
        android:text="Movie name"
        android:textStyle="bold" />

</RelativeLayout>
