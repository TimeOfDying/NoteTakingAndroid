<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plainolnotes" >

    <application
        android:name=".NoteTakingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

        <provider
            android:name=".NotesProvider"
            android:authorities="com.example.plainolnotes.NotesProvider"
            android:enabled="true"
            android:multiprocess="true"
            android:exported="true" />

        <activity
            android:name=".EditorActivity"
            android:label="@string/title_activity_editor"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.plainolnotes.MainActivity" />
        </activity>

        <activity android:name=".CalendarActivity"
            android:label="CalendarActivity"
            android:parentActivityName=".EditorActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.plainolnotes.EditorActivity" />
        </activity>

    </application>


</manifest>
